# Server Configuration
PORT=3000                      # Application port number
BASE_URL=/api/v1              # Base API URL
NODE_ENV=development          # Environment (development/production/test)

# Database Configuration
DB_HOST=localhost             # Database host
DB_PORT=5432                  # PostgreSQL default port
DB_USER=postgres              # Database username
DB_PASSWORD=postgres          # Database password
DB_NAME=task                  # Database name
DB_LOGGING=true              # Enable SQL query logging

# JWT Configuration
ACCESS_TOKEN_EXPIRY=1h        # JWT access token expiry (1 hour)
REFRESH_TOKEN_EXPIRY=7d       # JWT refresh token expiry (7 days)
ACCESS_TOKEN_SECRET=your_access_token_secret_here    # JWT access token secret
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here  # JWT refresh token secret

# TTL Configuration
EMAIL_DURATION=3600           # Email verification link expiry (1 hour)
PASSWORD_DURATION=3600        # Password reset link expiry (1 hour)
MFA_DURATION=300             # MFA code expiry (5 minutes)

# Google OAuth Configuration
SESSION_SECRET=your_session_secret_here        # Session secret for OAuth
GOOGLE_CLIENT_ID=your_google_client_id        # Google OAuth client ID
GOOGLE_CLIENT_SECRET=your_google_client_secret # Google OAuth client secret

# Email Configuration
AUTH_PRODUCTION_EMAIL=prod@example.com     # Production email address
AUTH_DEVELOPMENT_EMAIL=dev@example.com     # Development email address
BREVO_PASSWORD=your_brevo_password        # Brevo SMTP password
BREVO_USERNAME=your_brevo_username        # Brevo SMTP username
EMAIL_HOST=smtp.example.com              # SMTP host
EMAIL_PORT=2525                          # SMTP port
EMAIL_REDIRECT_URI=http://localhost:3000/redirect # OAuth redirect URI

# SMTP Configuration
EMAIL_USERNAME=your_smtp_username         # SMTP username
EMAIL_PASSWORD=your_smtp_password         # SMTP password
SMTP_SERVER=smtp-relay.brevo.com         # SMTP server
SMTP_PORT=2525                           # SMTP port 