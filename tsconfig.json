{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    // "types": ["node"],
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./*.ts", "src/index.ts", "src/app.ts"]
}
