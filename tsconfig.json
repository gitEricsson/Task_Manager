{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src",
    // "tests",
    "src/**/*.ts",
    // "tests/**/*.ts",
  ],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}